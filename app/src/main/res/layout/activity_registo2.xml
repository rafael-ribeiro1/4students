<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/n_de_periodos_de_aulas"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/nPeriodos"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/cinza_claro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/periodo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/per1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/_1_periodo"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/inicio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="90dp"
                    android:text="@string/inicio"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/fim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inicio1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:paddingEnd="90dp"
                    android:text="@string/fim"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/dinicio1"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>

                <EditText
                    android:id="@+id/dfim1"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dinicio1"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/periodo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/per2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/_2_periodo"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/inicio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="90dp"
                    android:text="@string/inicio"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/fim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inicio2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:paddingEnd="90dp"
                    android:text="@string/fim"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/dinicio2"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>

                <EditText
                    android:id="@+id/dfim2"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dinicio2"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/periodo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/per3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/_3_periodo"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/inicio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="90dp"
                    android:text="@string/inicio"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/fim3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inicio3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:paddingEnd="90dp"
                    android:text="@string/fim"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/dinicio3"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>

                <EditText
                    android:id="@+id/dfim3"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dinicio3"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:autoText="false"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:alpha="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/voltar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/seg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/seguinte"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/erroReg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text=""
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>